{
  "name": "aetherpost",
  "displayName": "AetherPost - Promotion as Code",
  "description": "AI-powered social media promotion directly from VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "social media",
    "promotion",
    "ai",
    "automation",
    "twitter",
    "marketing"
  ],
  "activationEvents": [
    "workspaceContains:campaign.yaml",
    "workspaceContains:package.json",
    "workspaceContains:pyproject.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aetherpost.init",
        "title": "Initialize AetherPost",
        "category": "AetherPost"
      },
      {
        "command": "aetherpost.quickStart",
        "title": "Quick Start Guide",
        "category": "AetherPost"
      },
      {
        "command": "aetherpost.plan",
        "title": "Preview Campaign",
        "category": "AetherPost"
      },
      {
        "command": "aetherpost.apply",
        "title": "Execute Campaign",
        "category": "AetherPost"
      },
      {
        "command": "aetherpost.quickPost",
        "title": "Quick Post",
        "category": "AetherPost"
      },
      {
        "command": "aetherpost.stats",
        "title": "View Analytics",
        "category": "AetherPost"
      },
      {
        "command": "aetherpost.openConfig",
        "title": "Open Configuration",
        "category": "AetherPost"
      },
      {
        "command": "aetherpost.validateConfig",
        "title": "Validate Configuration",
        "category": "AetherPost"
      },
      {
        "command": "aetherpost.setupCredentials",
        "title": "Setup Credentials",
        "category": "AetherPost"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceFilename == campaign.yaml",
          "command": "aetherpost.openConfig",
          "group": "aetherpost"
        }
      ],
      "editor/context": [
        {
          "when": "resourceFilename == campaign.yaml",
          "command": "aetherpost.validateConfig",
          "group": "aetherpost"
        }
      ],
      "commandPalette": [
        {
          "command": "aetherpost.init",
          "when": "workspaceFolder"
        },
        {
          "command": "aetherpost.quickStart",
          "when": "workspaceFolder"
        },
        {
          "command": "aetherpost.plan",
          "when": "aetherpost.configured"
        },
        {
          "command": "aetherpost.apply",
          "when": "aetherpost.configured"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aetherpost",
          "title": "AetherPost",
          "icon": "$(megaphone)"
        }
      ]
    },
    "views": {
      "aetherpost": [
        {
          "id": "aetherpost.campaign",
          "name": "Campaign Status",
          "when": "aetherpost.configured"
        },
        {
          "id": "aetherpost.analytics",
          "name": "Analytics",
          "when": "aetherpost.hasData"
        },
        {
          "id": "aetherpost.quickActions",
          "name": "Quick Actions",
          "when": "workspaceFolder"
        }
      ]
    },
    "configuration": {
      "title": "AetherPost",
      "properties": {
        "aetherpost.autoDetect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect project type and suggest configuration"
        },
        "aetherpost.defaultPlatforms": {
          "type": "array",
          "default": ["twitter"],
          "description": "Default platforms for new campaigns",
          "items": {
            "type": "string",
            "enum": ["twitter", "bluesky", "mastodon", "linkedin", "dev_to"]
          }
        },
        "aetherpost.defaultStyle": {
          "type": "string",
          "default": "casual",
          "description": "Default content style",
          "enum": ["casual", "professional", "technical", "humorous"]
        },
        "aetherpost.showPreviewOnPlan": {
          "type": "boolean",
          "default": true,
          "description": "Show content preview when planning campaigns"
        },
        "aetherpost.confirmBeforePosting": {
          "type": "boolean",
          "default": true,
          "description": "Ask for confirmation before posting"
        },
        "aetherpost.enableAnalytics": {
          "type": "boolean",
          "default": true,
          "description": "Enable analytics tracking"
        }
      }
    },
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/aetherpost.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "campaign.yaml",
        "url": "./schemas/campaign-schema.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "aetherpost",
        "required": ["command"],
        "properties": {
          "command": {
            "type": "string",
            "enum": ["plan", "apply", "stats"]
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "aetherpost",
        "owner": "aetherpost",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "yaml": "^2.3.0"
  }
}